#!/bin/bash

source private/setup.conf 
if [[ "$ConfigChanged" != "y" ]]; then
   echo "Please edit private/setup.conf!";
   exit;
fi
dnf update systemd -y
if [[ -z $(sestatus | grep "SELinux status:\s*enabled")  ]]; then
    ./run-scripts stage1 
    reboot
else
    ./stage1/010-createswap
    dnf install psmisc selinux-policy-sandbox policycoreutils-sandbox setroubleshoot selinux-policy-devel -y
    ./setup-main
fi
